# Makefile for Microsoft C > 5.0 (v1.0)
# usage: nmake -f makefile.msc
# Run vcvars32.bat to setup the cmdline environment

CC=cl
CFLAGS= -nologo -DWIN32 -MT -Ox
LINKOPTS = /link Wsock32.lib

OBJS= furl.obj furlutil.obj getopt.obj getopt1.obj

all: furl

furl: $(OBJS)
	$(CC) $(CFLAGS) -o furl.exe $(OBJS) $(LINKOPTS)

clean: 
	del /F /Q *.obj *.exe

.c.obj: 
	$(CC) $(CFLAGS) -c $*.c -o $*.obj

